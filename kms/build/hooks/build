#!/bin/bash

set -e
set -o pipefail

BUILD_CONTEXT=$(dirname ${DOCKERFILE_PATH})

. ${BUILD_CONTEXT}/hooks/helper

PrintOS
PrintDockerHubEnv
[[ "${COMMIT_MSG}" =~ (\[all\])|(\[kms\]) ]] || { echo 'Skipped.'; exit 0; }

Log "====== [build] BEGIN ====="

set -x

BUILD_OPTS=

docker build -t ${DOCKER_REPO}:${DOCKER_TAG} ${BUILD_OPTS} ${BUILD_CONTEXT}

set +x

Log "====== [build] END ====="